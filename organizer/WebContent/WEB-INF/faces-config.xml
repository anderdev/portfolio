<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	
	<validator>
		<validator-id>validatorController</validator-id>
		<validator-class>br.com.organizer.web.controller.ValidatorController</validator-class>
	</validator>

	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<message-bundle>br.com.organizer.web.bundle.Messages</message-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
	</application>

	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>contato</from-outcome>
			<to-view-id>/contato.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>novoUsuario</from-outcome>
			<to-view-id>/cadastro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logado</from-outcome>
			<to-view-id>/restrict_area.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/contato.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>novoUsuario</from-outcome>
			<to-view-id>/cadastro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logado</from-outcome>
			<to-view-id>/restrict_area.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/cadastro.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>contato</from-outcome>
			<to-view-id>/contato.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logado</from-outcome>
			<to-view-id>/restrict_area.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logado</from-outcome>
			<to-view-id>/restrict_area.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>carregarUsuario</from-outcome>
			<to-view-id>/manterUsuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>novoUsuarioFilho</from-outcome>
			<to-view-id>/manterUsuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listaDeUsuarios</from-outcome>
			<to-view-id>/listarUsuarios.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarDescricoes</from-outcome>
			<to-view-id>/listarDescricoes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manterParametros</from-outcome>
			<to-view-id>/manterParametros.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarCartoes</from-outcome>
			<to-view-id>/manterCartao.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manterConfiguracaoParametros</from-outcome>
			<to-view-id>/manterConfiguracaoParametros.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manterCredito</from-outcome>
			<to-view-id>/manterCredito.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarCreditos</from-outcome>
			<to-view-id>/listarCreditos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manterDebito</from-outcome>
			<to-view-id>/manterDebito.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarDebitos</from-outcome>
			<to-view-id>/listarDebitos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarFechamentos</from-outcome>
			<to-view-id>/listarFechamentos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manterFechamento</from-outcome>
			<to-view-id>/manterFechamento.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listarPropagandas</from-outcome>
			<to-view-id>/listarPropaganda.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>sessionTimeout</from-outcome>
			<to-view-id>/sessionTimeout.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>uncaughtException</from-outcome>
			<to-view-id>/uncaughtException.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
